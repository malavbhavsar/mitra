<%= form_for(@service, :html => {:class => "form-horizontal well"} ) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <legend><h2>New service</h2></legend>
  <div class="control-group">
    <%= f.label :name, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :picture, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :picture_url %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :brief_description, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :brief_description %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :long_description, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_area :long_description, :rows => 3 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :location %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fee, :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :fee %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Submit</button>
    </div>
  </div>
<% end %>